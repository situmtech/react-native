# EditorConfig helps developers define and maintain consistent
# coding styles between different editors and IDEs
# editorconfig.org

root = true

[*]

indent_style = space
indent_size = 2

end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true


[*.java,*.{sh,markdown}]
indent_size = 4

[*.md]
max_line_length = 0
trim_trailing_whitespace = false
indent_size = 4
